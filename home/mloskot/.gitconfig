[user]
    name = Mateusz ≈Åoskot
    email = mateusz@loskot.net
    signingkey = BB2AC1F2
[color]
    branch = auto
    diff = auto
    status = auto
	ui = auto
[core]
    excludesfile = /home/mloskot/.gitignore_global
    editor = gvim --nofork
	autocrlf = input
	pager = less -FRSX
[alias]
    # commands shorcuts
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    gf = flow
    # log aliases
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    # generate GitHub repository changelog in Markdown
    # usage: git <alias> first_tag last_tag github_user github_repo
    ghclm = !sh -c 'git log $1...$2  --pretty=format:\"* [view](http://github.com/$3/$4/commit/%H) - %s\"' -
    # show files ignored by git:
    ign = ls-files -o -i --exclude-standard
[github]
    user = mloskot
[push]
	default = simple
[status]
	showuntrackedfiles = all
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	stat = true
