# i3status config file (v4) - ~/.config/i3status/config or ~/.i3status.conf
#
# Please see http://i3wm.org/i3status/manpage.html for a complete reference!
#
# Author: Mateusz Loskot <mateusz@loskot.net>
#
general {
        colors = true
#color_good = "#00FF00"
#color_degraded = "#FFFF00"
#color_bad = "#FF0000"
        interval = 5
}

order += "wireless wlp3s0"
order += "disk /"
order += "disk /data"
order += "disk /home"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "load"
order += "battery 0"
order += "time"
order += "volume master"

wireless wlp3s0 {
        format_up = "W: %essid @ %ip (Q: %quality)"
        format_down = "W: down"
}

ethernet enp0s25 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

cpu_usage {
    format = "C: %usage"
}

cpu_temperature 0 {
    format = "T: %degrees °C"
}

disk / {
    format = "sda1: %used/%total"
}

disk "/data" {
    format = "sda3: %used/%total"
}

disk "/home" {
    format = "sdb1: %used/%total"
}

time {
    format = "%H:%M:%S"
}

load {
    format = "L: %1min"
}

battery 0 {
        format = "%status %percentage %remaining (%consumption)"
}

volume master {
        format = "♪: %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
